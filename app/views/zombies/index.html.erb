<% provide( :title, '' ) %>

<div class="row-fluid" id="row-1">
	<div class="span12">SDS JE BLOKIRALA</div>
</div>
<div class="row-fluid" id="row-2">
	<div class="span12"><%= @zombies.length %></div>
</div>
<div class="row-fluid" id="row-3">
	<div class="span12">
		<% if @zombies.length === 1 || @zombies.length === 2 %>
		DRŽAVLJANA
		<% elsif @zombies.length === 3 || @zombies.length === 4 %>
		DRŽAVLJANE
		<% elsif @zombies.length >= 5 %>
		DRŽAVLJANOV
		<% end %>
	</div>
</div>

<div id="check-container">
	<div>Si tudi ti med njimi?</div>
	<a href="/auth/twitter"><%= image_tag('sign-in-with-twitter.png', width: '158px',  height: '28px' ) %></a>
</div>

<div id="share">
	<iframe allowtransparency="true" frameborder="0" scrolling="no" src="https://platform.twitter.com/widgets/tweet_button.html?url=http%3A%2F%2Fwww.sdszombi.com&amp;via=SDSzombi" style="width:78px; height:20px;"></iframe>
	<a href="https://twitter.com/SDSzombi" class="twitter-follow-button" data-show-count="true" data-lang="en" data-width="193px">Follow @SDSzombi</a>
	<iframe src="//www.facebook.com/plugins/like.php?href=http%3A%2F%2Fwww.sdszombi.com&amp;send=false&amp;layout=button_count&amp;width=450&amp;show_faces=false&amp;font&amp;colorscheme=light&amp;action=like&amp;height=21" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:80px; height:21px;" allowTransparency="true"></iframe>
</div>

<div class="row-fluid">
	<div class="span5">
		<% @zombies.each do |zombie| %>
		<div>
			<a href="https://twitter.com/<%= zombie.name %>">@<%= zombie.name %></a>
			<br /><%= zombie.message %>
		</div>
		<% end %>
	</div>
	<div class="span5 offset1">
		<a class="twitter-timeline" href="https://twitter.com/search?q=%23strankaSDS" data-widget-id="282908513997553665" width="350">Tweets about "#strankaSDS"</a>
	</div>
</div>

